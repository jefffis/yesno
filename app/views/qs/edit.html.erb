<%# if cookies[@q.unique_id+'-author'] == 'yes' %>
<h1 class="none">Edit <span><%= @q.title %></span></h1>
<%= render 'form' %>
<div class="center del">
	<%= link_to 'Delete this question?'.html_safe, @q, method: :delete, data: { confirm: 'Are you sure? All data will be gone for good.' } %>
</div>
<div class="center">
	<%= link_to(@q) do %>
	<span class="icon-arrow-left"></span>
	<% end %>
	<%= link_to(qs_path) do %>
	<span class="icon-home"></span>
	<% end %>
</div>
<%# else %>
<div class="not-valid">
	<h1>Hmmm, looks like you didn&rsquo;t create this post.</h1>
	<p>That means, you shouldn&rsquo;t be editing it either â˜¹.</p>
	<div class="center btm">
		<%= link_to(new_q_path) do %>
		<span class="btn"><span class="icon-plus"></span> Add</span>
		<% end %>
		<%= link_to('/') do %>
		<span class="btn"><span class="icon-home"></span></span>
		<% end %>
	</div>
</div>
<%# end %>